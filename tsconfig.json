{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "paths": {
      "#{config}/*": ["app/config/*"],
      "#{service}/*": ["app/service/*"],
      "#{component}/*": ["app/component/*"],
      "#{pipe}/*": ["app/pipe/*"],
      "#{common}/*": ["app/common/*"],
      "#{assets}/*": ["assets/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
